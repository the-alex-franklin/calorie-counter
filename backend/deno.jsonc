{
	"tasks": {
		"dev": "deno run -A --watch src/app.ts",
		"test": "deno test -A"
	},
	"compilerOptions": {
		"strict": true,
		"strictNullChecks": true,
		"noUncheckedIndexedAccess": true,
		"lib": ["ESNext", "DOM", "DOM.Iterable", "deno.ns", "deno.unstable"]
	},
	"nodeModulesDir": "auto",
	"imports": {
		"fp-try": "jsr:@2or3godzillas/fp-try@^1.4.0",
		"hono": "npm:hono",
		"zod": "npm:zod",
		"axios": "npm:axios",
		"mongodb": "npm:mongodb",
		"bcryptjs": "npm:bcryptjs",
		"jwt-simple": "npm:jwt-simple",
		"chalk": "npm:chalk"
	},
	"fmt": {
		"lineWidth": 120,
		"semiColons": true,
		"useTabs": true
	},
	"lint": {
		"rules": {
			"exclude": [
				"no-explicit-any",
				"no-unused-vars",
				"require-await"
			]
		}
	}
}
